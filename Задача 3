#include <iostream>
#include <vector>
#include<algorithm>
#include <string>

using namespace std;

void evendigits(long long n, int& ans) {
    if (n < 0) {
        n = -n;
    }

    if (n == 0) {
        return;
    }

    if ((n % 10) % 2 == 0) {
        ans++;
    }

    evendigits(n / 10, ans);
}

int main() {
    setlocale(LC_ALL, "RU");
    int ans = 0;

    evendigits(9223372036854775806LL, ans);
    std::cout << "Количество чётных цифр: " << ans << std::endl; 

    ans = 0;
    evendigits(1234567890, ans);
    std::cout << "Количество чётных цифр: " << ans << std::endl; 

    ans = 0;
    evendigits(-24680, ans);
    std::cout << "Количество чётных цифр: " << ans << std::endl;;
}
