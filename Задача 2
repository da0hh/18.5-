#include <iostream>
#include <vector>
#include<algorithm>

using namespace std;

int countWays(int n, int k = 3) {
    if (n == 0) {
        return 1; 
    }

    int ways = 0; 

    for (int i = 1; i <= k && n - i >= 0; i++) {
        ways += countWays(n - i, k); 
    }

    return ways;
}

int main() {
    setlocale(LC_ALL, "RU");
    int n, k;

    std::cout << "Введите целевую ступеньку: "; std::cin >> n;

    std::cout << "Введите максимальную длину прыжка: "; std::cin >> k;

    int result = countWays(n, k);
    std::cout << "Количество способов: " << result << std::endl;
}
